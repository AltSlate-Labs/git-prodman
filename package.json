{
  "name": "git-prodman",
  "version": "0.1.0",
  "description": "Git-native product management. Local-first, AI-native, MIT licensed.",
  "type": "module",
  "bin": {
    "prodman": "./dist/cli/index.js"
  },
  "main": "./dist/cli/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "prodman": "tsx src/cli/index.ts",
    "build": "tsc",
    "ui": "tsx src/cli/index.ts ui",
    "test": "node --test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "pkg": "npm run build && pkg dist/cli/index.js --targets node18-macos-arm64,node18-linux-x64,node18-win-x64 --output bin/prodman",
    "pkg:all": "npm run build && pkg dist/cli/index.js --targets node18-macos-arm64,node18-macos-x64,node18-linux-x64,node18-linux-arm64,node18-win-x64 --output bin/prodman"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "outputPath": "bin"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@clack/prompts": "^0.7.0",
    "@hono/node-server": "^1.13.0",
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.0",
    "isomorphic-git": "^1.27.0",
    "minisearch": "^7.1.0",
    "ollama": "^0.5.9",
    "open": "^10.1.0",
    "openai": "^4.67.0",
    "picocolors": "^1.1.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/node": "^22.0.0",
    "@yao-pkg/pkg": "^5.15.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "product-management",
    "git",
    "cli",
    "ai",
    "prd",
    "roadmap",
    "local-first"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/git-prodman/git-prodman"
  },
  "homepage": "https://github.com/git-prodman/git-prodman#readme",
  "bugs": {
    "url": "https://github.com/git-prodman/git-prodman/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
